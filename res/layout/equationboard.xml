<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
				android:id="@+id/relativeLayout1" android:layout_width="fill_parent" 
				android:layout_height="fill_parent" android:gravity="fill"
				android:background="@color/background">
<RelativeLayout android:id="@+id/idTopLayout" android:layout_height="wrap_content" android:background="@color/background" 
				android:padding="6dip" android:paddingBottom="6dip" android:paddingLeft="6dip" android:paddingRight="6dip" 
				android:paddingTop="6dip" android:layout_width="wrap_content" android:layout_alignParentTop="true">
	<ImageView
  	  android:id="@+id/imageHome"
	  android:layout_width="50dip"
	  android:layout_height="50dip"  android:src="@drawable/home" android:layout_alignParentLeft="true" />
		
</RelativeLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_above="@+id/idBottomLayout"
    android:layout_below="@+id/idTopLayout">
   
           <com.softengg.TileView  
            android:id="@+id/tile_view"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            
            android:focusableInTouchMode="true">
            
            
            
            </com.softengg.TileView>

   
    
</LinearLayout>
<RelativeLayout android:id="@+id/idBottomLayout" android:layout_height="wrap_content" android:background="@color/background" 
				android:padding="10dip" android:paddingBottom="6dip" android:paddingLeft="6dip" android:paddingRight="6dip" 
				android:layout_width="wrap_content" android:layout_alignParentBottom="true"
				>
				
	<ImageView
  	  android:id="@+id/imagethumbsup"
	  android:layout_width="50dip"
	  android:layout_height="50dip"  android:src="@drawable/thumbsup" android:layout_alignParentRight="true" />
	<ImageView
  	  android:id="@+id/imagethumbsdown"
	  android:layout_width="50dip"
	  android:layout_height="50dip"  android:src="@drawable/thumbsdown" android:layout_alignParentRight="true"/>  
	  <TextView
        android:text="Score:"
        android:id="@+id/scoreLabel"
        android:textColor="#FFFFFF" 
        android:textSize="18dip"
        android:typeface="sans"
        android:textStyle="bold" android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:shadowColor="#00ccff"  
        android:shadowRadius="1.5"  
        android:shadowDx="1"  
        android:shadowDy="1"
        android:layout_centerHorizontal="true" android:layout_centerInParent="true" 
		/>
	
</RelativeLayout>

</RelativeLayout>