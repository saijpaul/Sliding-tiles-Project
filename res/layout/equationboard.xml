<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:qwad="http://schemas.android.com/apk/res/com.softengg"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">
    
 <RelativeLayout android:id="@+id/headerLayout" android:layout_height="wrap_content" android:background="@drawable/header" 
				android:padding="8dip" android:paddingBottom="8dip" android:paddingLeft="8dip" android:paddingRight="8dip" 
				android:paddingTop="8dip" android:layout_width="wrap_content" android:layout_alignParentTop="true">
	<ImageView
  	  android:id="@+id/imageHome"
	  android:layout_width="50dip"
	  android:layout_height="50dip"  android:src="@drawable/home" android:layout_alignParentRight="true" />

</RelativeLayout>
 
               
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.softengg.TileView  
            android:id="@+id/tile_view"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            
            android:focusableInTouchMode="true"/>

    </FrameLayout>
    
 <RelativeLayout android:id="@+id/footerLayout" android:layout_height="wrap_content" android:background="@drawable/header" 
				android:padding="8dip" android:paddingBottom="8dip" android:paddingLeft="8dip" android:paddingRight="8dip" 
				android:paddingTop="8dip" android:layout_width="wrap_content" android:layout_alignParentTop="true">
</RelativeLayout>
    
</LinearLayout>