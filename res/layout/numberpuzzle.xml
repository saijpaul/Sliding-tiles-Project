<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
				android:id="@+id/relativeLayout1" android:layout_width="fill_parent" 
				android:layout_height="fill_parent" android:gravity="fill"
				android:background="@color/backgroundMode2">
<RelativeLayout android:id="@+id/idTopLayout" android:layout_height="wrap_content" android:background="@color/backgroundMode2" 
				android:padding="6dip" android:paddingBottom="6dip" android:paddingLeft="6dip" android:paddingRight="6dip" 
				android:paddingTop="6dip" android:layout_width="wrap_content" android:layout_alignParentTop="true">
	<ImageView
  	  android:id="@+id/imageHome"
	  android:layout_width="50dip"
	  android:layout_height="50dip"  android:src="@drawable/home" android:layout_alignParentLeft="true" />
	  <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableRow1" 
	  android:layout_alignParentRight="true"
	  android:gravity="bottom">
	  <TextView
      android:text="Change Puzzle Size"
      android:id="@+id/changePuzzle"
      android:textColor="#FFFFFF"
      android:textSize="12dip"
      android:typeface="sans"
      android:textStyle="bold" android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:shadowColor="#00ccff"
      android:shadowRadius="1.5"
      android:shadowDx="1"
      android:shadowDy="1"
      android:layout_below="@+id/gridSelect"
android:paddingRight="10dip"

android:layout_alignParentRight="true"

              />
	<Spinner android:id = "@+id/gridSelect" 
	 android:layout_width="40dip" android:layout_height="40dip" 
	 android:prompt="@string/grid_size"
	 android:layout_alignParentRight="true" 
	 
	 />
	 </TableRow>
</RelativeLayout>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_above="@+id/idBottomLayout"
    android:layout_below="@+id/idTopLayout">
   
           <com.softengg.NumberGameView  
            android:id="@+id/numbergame_view"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            
            android:focusableInTouchMode="true">
            
            
            
            </com.softengg.NumberGameView>

   
    
</LinearLayout>
<RelativeLayout android:id="@+id/idBottomLayout" android:layout_height="wrap_content" android:background="@color/backgroundMode2" 
				android:padding="10dip" android:paddingBottom="6dip" android:paddingLeft="6dip" android:paddingRight="6dip" 
				android:layout_width="wrap_content" android:layout_alignParentBottom="true"
				>
				
	 
</RelativeLayout>

</RelativeLayout>